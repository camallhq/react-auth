{
    "name": "@camall/react-auth",
    "description": "Camall authentication provider for react.",
    "repository": {
        "type": "git",
        "url": "https://github.com/camallhq/react-auth"
    },
    "version": "1.10.0",
    "license": "MIT",
    "keywords": [
        "auth",
        "react",
        "user"
    ],
    "peerDependencies": {
        "react": "^17.0.2 || ^18.0.0",
        "react-dom": "^17.0.2 || ^18.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/jest": "^29.5.12",
        "@types/react": "^17.0.4",
        "@types/react-dom": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.2.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "rollup": "^3.29.4",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "ts-jest": "^29.1.5",
        "tslib": "^2.6.3",
        "typescript": "^4.2.4",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "lint": "eslint --ext .ts,.tsx .",
        "build": "npm run test && npm run build:types && npm run build:js",
        "test": "npm run lint && jest --silent --passWithNoTests",
        "prepublishOnly": "npm run build"
    },
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/types/index.d.ts",
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "testMatch": [
            "**/*.test.ts",
            "**/*.test.tsx"
        ]
    }
}
